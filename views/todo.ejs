<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link
        href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Poppins:wght@400;500;600;700&family=Tilt+Prism&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
        integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="./css/style.css">
</head>

<body>

    <div class="container">

        <!-- todo title -->
        <div class="header">
            <h1>TODO App</h1>
        </div>

        <!-- todo form start -->
        <div class="form">
            <form action="/add-todo" method="POST">
                <div class="form-group">
                    <label for="task">DESCRIPTION</label>
                    <input type="text" name="task" id="task" placeholder="What do you need to do?" required>
                </div>
                <div class="form-group form-pair">
                    <div class="form-item">
                        <label for="category">CATEGORY</label>
                        <select name="category" id="category" required>
                            <option value="" hidden>SELECT CATEGORY</option>
                            <% for(let i of category){ %>   
                                <option value="<%= i._id %>"><%= i.name %></option>
                            <% } %>
                           
                        </select>
                    </div>
                    <div class="form-item">
                        <label for="date">DUE DATE</label>
                        <input type="date" name="date" id="date" required>
                    </div>
                </div>
                <div class="button-group">
                    <button type="submit" class="btn btn-dark" id="add-task"><i class="fa-solid fa-plus"></i> Add
                        Task</button>
                    
                        <a href="/category"  class="btn btn-primary"><i class="fa-solid fa-list"></i> All Cateogries</a>
                </div>
            </form>
        </div>
        <!-- form end -->

        <!-- task list start -->
        <div class="list">
            <form action="/delete-todo" method="POST">
                <div class="list-header">
                    <h2>All Todo's</h2>
                    <button type="submit" class="btn-sm btn-red"><i class="fa-solid fa-trash"></i> Delete
                        Tasks</button>
                </div>
                <% if(todo.length==0){ %>

                    <h3>No Pending Tasks!</h3>

                    <%} %>

                        <ul>

                            <!-- showiing todo items  -->
                            <% for(let i of todo){ %>
                                <li class="list-item">
                                    <div class="task-detail">
                                        <input type="checkbox" name="list" value="<%= i._id %>">
                                        <div class="task-item">
                                            <h4>
                                                <%= i.task %>
                                            </h4>
                                            <div class="task-date">
                                                <i class="fa-solid fa-calendar-days"></i> <span>
                                                    <%= i.date %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="category-item">
                                        <%=  i.category[0].name %>
                                    </div>
                                </li>
                                <% }%>

                        </ul>
            </form>

        </div>

        <!-- task list end -->

    </div>


    <script src="./js/script.js"></script>
</body>

</html>